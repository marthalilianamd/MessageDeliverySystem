<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- main button next-->
    <style name="gomainBtn" parent="Theme.AppCompat.Light">
        <item name="android:elevation">7dp</item>
        <item name="android:src">@mipmap/ic_arrow_forward_36dp</item>
        <item name="android:contentDescription">@string/hintText</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- Title App -->
    <style name="fontTitleApp">
        <item name="android:textColor">@color/CoffeFont</item>
        <item name="android:fontFamily">@font/abel</item>
        <item name="android:textSize">40sp</item>
        <item name="android:elevation">6dp</item>
    </style>

    <!-- Text Title -->
    <style name="fontTitle">
        <item name="android:textColor">@color/CoffeFont</item>
        <item name="android:fontFamily">@font/abel</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text Normal -->
    <style name="fontTextNormal">
        <item name="android:textColor">@color/CoffeFont</item>
        <item name="android:fontFamily">@font/abel</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text Mini -->
    <style name="fontTextMini">
        <item name="android:textColor">@color/CoffeFont</item>
        <item name="android:fontFamily">@font/abel</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Text welcome -->
    <style name="fontTextWelcome">
        <item name="android:textColor">@color/CoffeFont</item>
        <item name="android:fontFamily">@font/abel</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <!-- Text card mensaje -->
    <style name="fontCardMensaje">
        <item name="android:textColor">@color/CoffeFont</item>
        <item name="android:fontFamily">@font/abel</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
    </style>

    <!-- Text card mensaje Title-->
    <style name="fontCardMensajeTitle">
        <item name="android:textColor">@color/CoffeFont</item>
        <item name="android:fontFamily">@font/abel</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
    </style>

    <style name="fontHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- -->
    <style name="fontBtns">
        <item name="android:textColor">@color/CoffeFont</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/abel</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="fontBtnEnviar">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/abel</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ImageViewButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_image_button</item>
        <item name="android:layout_margin">@dimen/imageView.margin</item>
    </style>

</resources>
