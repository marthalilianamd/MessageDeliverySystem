<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/containerMainEnviado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgEnviado"
            android:src="@drawable/ic_room_service_black_80dp"
            android:layout_width="@dimen/img.item.size"
            android:layout_height="@dimen/img.item.size"
            android:layout_alignParentStart="true"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="@dimen/img.item.size"
            android:layout_height="@dimen/img.item.size"
            android:layout_toEndOf="@+id/imgEnviado"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvAsuntoEnviado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/main.padding.small"
                android:hint="@string/enviados.tittle"
                android:maxLines="2"
                android:textAppearance="?android:textAppearanceLarge" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvContenidoMensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/main.padding.small"
                android:theme="@style/fontTextMini"
                android:hint="@string/mensaje.hint.contenido"
                android:maxLines="2"
                android:textAppearance="?android:textAppearanceLarge" />

        </android.support.v7.widget.LinearLayoutCompat>

    </RelativeLayout>


</android.support.v7.widget.CardView>