<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/containerMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgMensaje"
            android:src="@drawable/ic_message_black_80dp"
            android:layout_width="@dimen/img.item.size"
            android:layout_height="@dimen/img.item.size"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvTituloMensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mensaje.hint.titulo"
            android:maxLines="2"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_margin="@dimen/main.padding.small"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvContenidoMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mensaje.hint.contenido"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_margin="@dimen/main.padding.small"/>
            </LinearLayout>

        </LinearLayout>



        <!--
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/mensaje.hint.estado"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_margin="@dimen/main.padding.small"
            android:drawableBottom="@drawable/ic_star_"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:tint="@android:color/white"/>
            -->

    </RelativeLayout>
</android.support.v7.widget.CardView>